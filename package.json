{
  "name": "smart-paython-logger",
  "displayName": "Smart Paython Logger",
  "description": "add logging to a python code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
      "viewsContainers": {
        "activitybar": [
            {
                "id": "smartPythonLoggerContainer",
                "title": "Smart Python Logger",
                "icon": "media/log-file-icon.svg" 
            }
        ]
    },
    "views": {
        "smartPythonLoggerContainer": [
            {
                "type" : "webview",
                "id": "smartPythonLoggerView",
                "name": "smartPythonLoggerView"
            }
        ]
    },
    "commands": [
      {
        "command": "smart-paython-logger.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "smart-paython-logger.gpt_Test",
        "title": "GPT TEST"
      },
      {
        "command": "smart-paython-logger.addDebugLogging",
        "title": "Add Debug Logging"
      },
      {
        "command": "smart-paython-logger.autoLogging",
        "title": "Auto Logging with AI"
      },
      {
        "command": "smart-paython-logger.runAutoLogging",
        "title": "runAutoLogging"
      },
      {
        "command": "smart-paython-logger.openUI",
        "title": "Open Smart Python Logger UI"
      }
    ],
    "keybindings": [
      {
          "command": "smart-paython-logger.addDebugLogging",
          "key": "ctrl+l+q",
          "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "smart-paython-logger.openUI",
        "key": "ctrl+l",
        "when": "editorTextFocus && editorLangId == python"
      }
  ]
  },"mocha": {
    "require": "ts-node/register",
    "extension": ["ts"],
    "spec": "src/test/**/*.ts",
    "ui": "tdd"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test-unit": "mocha"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^5.0.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "openai": "^4.0.0"
  }
}
